<div class="row">
<% @pictures.each do |picture| %>
	<div class="col-sm-6 col-md-3">
		<div class="thumbnail">

				<%= image_tag(picture.url) %>
				<div class="caption">
				<h4><%= picture.title %></h4><h5>Rok: <%= picture.year %> </h5>
				<h5>Tag: <i><%= picture.tag %></i></h5>
				<br>
				<p><%= link_to "Edytuj", edit_picture_path(picture.id), class: "btn btn-primary" %>
				<%= link_to "Usun", picture_path(picture.id), :confirm => "Are you sure?", :method => :delete, class: "btn btn-danger" %></p>
				</div>
			</div>
	</div>
		<% end%> 
		<br>
</div>